<main class="MainTodoPage">
    <h1 class="TodoPage-title">My Todo List</h1>
        <section class="AddTodo">
            <%= form_with(url: "/todos", method: "post") do %>
                <i class="fa fa-thumb-tack icon" aria-hidden="true"></i>
                <input class="AddTodo-text" name=todo_text type="text" placeholder="What's Pending?">
                <i class="fa fa-calendar icon" aria-hidden="true"></i>
                <input class="AddTodo-date" name=due_date type="date">
                <input class="AddTodo-button" type="submit" value="Add">
            <% end %>
        </section>
            <%= render partial: "todo-section", 
                locals:{
                    section_title: "Overdue",
                    todos: Todo.overdue
                    } 
            %>
            <%= render partial: "todo-section",     
                locals:{
                    section_title: "Due Today",
                    todos: Todo.due_today
                }
            %>
            <%= render partial: "todo-section",
                locals:{
                    section_title: "Due Later",
                    todos: Todo.due_later
                }
            %>
        <div class="TodoSectionCredits">
            <p>Photo by Sergey Zolkin on Unsplash</p>
        </div>
</main>